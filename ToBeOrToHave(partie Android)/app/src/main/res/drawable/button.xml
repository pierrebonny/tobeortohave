<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8B8C8B" />
            <gradient android:angle="-90" android:startColor="#8B8C8B" android:endColor="@android:color/darker_gray"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8B8C8B" />
            <solid android:color="#8B8C8B"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8B8C8B" />
            <gradient android:angle="-90" android:startColor="@android:color/darker_gray" android:endColor="#8B8C8B" />
        </shape>
    </item>
</selector>